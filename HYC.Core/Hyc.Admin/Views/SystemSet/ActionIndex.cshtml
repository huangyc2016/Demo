@using Hyc.Service.Dtos;
@{
    var ControllerList = ViewData["ControllerList"] as List<ControllerDto>;
    var ControllerId = ViewBag.ControllerId;
}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title">
            <span>控制器:</span>
            <select id="j-ControllerId">
                @{
                    foreach (var item in ControllerList)
                    {
                        if (ControllerId == item.Id)
                        {
                            <option selected="selected" value="@item.Id">@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="pull-right  box-tools">
            <button id="btnToController" title="" class="btn btn-reddit" type="button" data-original-title="返回" data-toggle="tooltip" data-widget="">
                <i class="fa fa-reply"></i>&nbsp;&nbsp;返回
            </button>
            <button id="btnAdd" title="" class="btn btn-primary" type="button" data-original-title="新增" data-toggle="tooltip" data-widget="">
                <i class="fa fa-plus-circle"></i>&nbsp;&nbsp;新增
            </button>
            <button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title="删除" data-toggle="tooltip" data-widget="">
                <i class="fa fa-times"></i>&nbsp;&nbsp;删除
            </button>
        </div>
    </div>
    <div class="box-body">
        <div class="table-scrollable">
            <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                <thead>
                    <tr role="row">
                        <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
                        <th tabindex="0" aria-label="">
                            名称
                        </th>
                        <th tabindex="0" aria-label="">
                            描述
                        </th>
                        <th tabindex="0" style="width: 230px;" aria-label="">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody id="tableBody"></tbody>
            </table>
        </div>
    </div>
</div>
@Html.Partial("_EditAction")
@section scripts{
    <script src="~/Views/SystemSet/ActionIndex.js"></script>
}